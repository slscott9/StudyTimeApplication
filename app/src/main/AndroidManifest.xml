<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hfad.com.studytimeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MonthDetailActivity" />
        <activity android:name=".activities.SessionMonthSelectorActivity"
            android:label="Your Sessions"/>
        <activity android:name=".activities.TimerActivity"
            android:label="New Session"/>
        <activity
            android:name=".activities.MainActivity"
            android:label="Study Time">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>